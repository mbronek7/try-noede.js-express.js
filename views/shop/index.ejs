<% products.forEach(function(productChunk){ %>
<div class="row">
  <% productChunk.forEach(function(product){%>
  <div class="card" style="width: 18rem;">
    <img src="<%- product.imagePath %>" class="card-img-top" alt="<%- product.title %>">
    <div class="card-body">
      <h5 class="card-title">
        <%- product.title %>
      </h5>
      <p class="card-text">
        <%- product.description %>
      </p>
      <a href="#" class="btn btn-primary">Go somewhere</a>
    </div>
  </div>
  <% }); %>
</div>
<% }); %>